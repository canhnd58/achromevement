{
  "extends": "standard",
  "rules": {
    "comma-dangle": [2, "always-multiline"],
    "semi": [2, "always"],
    "standard/no-callback-literal": "off",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "env": {
    "jest/globals": true,
    "webextensions": true
  },
  "plugins": [
    "react",
    "jest"
  ]
}
